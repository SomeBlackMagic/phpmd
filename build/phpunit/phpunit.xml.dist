<?xml version="1.0"?>
<phpunit bootstrap="../../tests/php/bootstrap.php"

>
    <testsuites>
        <testsuite name="PHPMD AllTests">
            <directory suffix="Test.php">../../tests/php</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">../../src/main/php</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-php" target="data/coverage.cov"/>
        <log type="coverage-clover" target="data/clover.xml"/>
    </logging>
</phpunit>
